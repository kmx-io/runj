#!/bin/sh
## runj - run commands in parallel
## Copyright 2025 kmx.io <contact@kmx.io>

SRC_DIR="$(dirname "$0")"
BUILD_DIR="$PWD"

if [ "x$1" = "x--prefix" ]; then
    PREFIX="$2"
    shift 2
fi

if [ "x$PREFIX" = "x" ]; then
    PREFIX="/usr/local"
fi

echo "# gen by configure"  > configure.mk
echo "prefix  = $PREFIX"  >> configure.mk
echo "src_dir = $SRC_DIR" >> configure.mk

if [ "x$SRC_DIR" != "x." ]; then
    cp "$SRC_DIR"/Makefile ./
fi
